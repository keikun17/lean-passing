.row
  .seven.columns.centered
    %fieldset
      %legend
        %h4 Papasa ka ba?

      %h5.subheader
        Enter your scores and we will predict your fate this semester
      .row.tabs
        .four.columns
        .five.columns.tabs.right
          %dl.tabs.pill.small.right#class_type_switcher
            %dd.active= link_to "Lecture"
            %dd= link_to "Laboratory"
        .three.columns

      %form
        .row
          .three.columns
            %label.right.inline Quizzes
            // Theory : How eager a student is to pass the subject
          .nine.columns
            .six.columns
              = text_field_tag :quiz, nil, :placeholder => "Score"
            .six.columns
              = text_field_tag :quiz, nil, :placeholder => "Total"
        .row
          .three.columns
            %label.right.inline Homeworks
            // Theory : Homework measure consistency
          .nine.columns
            .six.columns
              = text_field_tag :homework, nil, :placeholder => "Score"
            .six.columns
              = text_field_tag :homework, nil, :placeholder => "Total"
        .row
          .three.columns
            %label.right.inline Project
            // Theory : Projects measure creativity/cunning
          .nine.columns
            .six.columns
              = text_field_tag :finals, nil, :placeholder => "Score"
            .six.columns
              = text_field_tag :finals, nil, :placeholder => "Total"
        .row
          .three.columns
            %label.right.inline Midterms
            // See `Finals` below then divide that by zero
          .nine.columns
            .six.columns
              = text_field_tag :finals, nil, :placeholder => "Score"
            .six.columns
              = text_field_tag :finals, nil, :placeholder => "Total"
        .row
          .three.columns
            %label.right.inline Finals
            // Measure of a student's capacity to retain useless knowledge
          .nine.columns
            .six.columns
              = text_field_tag :finals, nil, :placeholder => "Score"
            .six.columns
              = text_field_tag :finals, nil, :placeholder => "Total"
        .row
          .eight.columns.centered{:style => "text-align:center"}
            // Alam naman natin na dito rin bagsak niyan e
            %label Gaano ka TERROR ang prof?
        .row
          .four.columns
            %label.right.inline 
              0
          .four.columns
            = range_field_tag :something, 50, {:min => '1', :max => 100, :style => "width:100%"}
          .four.columns
            %label.inline All of it
      
    .even
      = button_tag "Predict", :class => "button twelve columns"
